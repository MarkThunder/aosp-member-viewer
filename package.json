{
  "name": "aosp-framework-helper",
  "displayName": "AOSP Framework Helper",
  "description": "VS Code helpers for AOSP framework navigation and analysis.",
  "version": "0.1.0",
  "publisher": "jarico",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:java",
    "onView:aospJavaStructure",
    "onView:aospMethodGraph",
    "onView:aospSystemServices",
    "onView:aospLifecycle",
    "onCommand:aosp.refreshStructure",
    "onCommand:aosp.showMethodCallGraph",
    "onCommand:aosp.showSystemServices",
    "onCommand:aosp.showLifecycle"
  ],
  "main": "./out/extension.js",
  "icon": "media/icon.png",
  "contributes": {
    "commands": [
      {
        "command": "aosp.refreshStructure",
        "title": "AOSP: Refresh Java Structure"
      },
      {
        "command": "aosp.showMethodCallGraph",
        "title": "AOSP: Show Method Call Graph"
      },
      {
        "command": "aosp.showSystemServices",
        "title": "AOSP: Show System Services"
      },
      {
        "command": "aosp.showLifecycle",
        "title": "AOSP: Show Framework Lifecycle"
      },
      {
        "command": "aosp.revealLine",
        "title": "AOSP: Reveal Line"
      },
      {
        "command": "aosp.openFileAtLine",
        "title": "AOSP: Open File At Line"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "aospJavaStructure",
          "name": "AOSP Java Structure"
        },
        {
          "id": "aospMethodGraph",
          "name": "AOSP Method Call Graph"
        },
        {
          "id": "aospSystemServices",
          "name": "AOSP System Services"
        },
        {
          "id": "aospLifecycle",
          "name": "AOSP Lifecycle"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.3",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "java-parser": "^2.3.0"
  }
}
